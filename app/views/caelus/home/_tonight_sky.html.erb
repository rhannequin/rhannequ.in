<div class="rounded-lg border bg-card text-card-foreground shadow-sm cosmic-card">
  <h2 class="text-xl font-bold mb-4 text-cosmic">
    <%= t ".title" %>
  </h2>
  <div class="space-y-3 text-sm">
    <div class="flex justify-between">
      <span class="text-muted-foreground">
        <%= t ".titles.astronomical_twilight" %>
      </span>
      <span class="font-medium">
        <%= l @twilight_events.evening_astronomical_twilight_time, format: :hm %>
        :
        <%= l @next_twilight_events.morning_astronomical_twilight_time, format: :hm %>
      </span>
    </div>
    <div class="flex justify-between">
      <span class="text-muted-foreground">
        <%= t ".titles.moon_interference" %>
      </span>
      <span class="font-medium text-yellow-400">
        Moderate
      </span>
    </div>
    <div class="flex justify-between">
      <span class="text-muted-foreground">
        <%= t ".titles.planets_visible" %>
      </span>
      <span class="font-medium text-green-400">
        3 planets
      </span>
    </div>
  </div>
</div>
